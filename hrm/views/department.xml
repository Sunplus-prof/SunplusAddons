<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- ********** View ********** -->
        <!-- Department tree view-->
        <record model="ir.ui.view" id="department_tree_view" >
            <field name="priority" eval="0"/>
            <field name="name">hrm.department.tree</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="department_code"/>
                    <field name="name"/>
                    <field name="manager_id" string="Department Manager"/>
                    <field name="parent_id"/>
                    <field name="department_level"/>
                </tree>
            </field>
        </record>

        <!-- Department form view -->
        <record model="ir.ui.view" id="department_form_view" >
            <field name="priority" eval="99"/>
            <field name="name">hrm.department.form</field>
            <field name="model">hr.department</field>
            <!--<field name="inherit_id" ref="hr.view_department_form"/>-->
            <field name="arch" type="xml">
                <form string="department">
                    <sheet>
                        <group col="4">
                            <field name="department_code"/>
                            <field name="department_level"/>
                            <field name="name"/>
                            <field name="department_eng_name"/>
                            <field name="manager_id" string="Department Manager" options="{'no_quick_create':True, 'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                            <field name="parent_id" options="{'no_quick_create':True, 'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Department Search view -->
        <record model="ir.ui.view" id="department_search_view">
            <field name="priority" eval="0"/>
            <field name="name">hrm.department.search</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <search>
                    <field name="department_code"/>
                    <field name="department_level"/>
                    <field name="name"/>
                    <field name="manager_id" string="Department Manager"/>
                    <field name="parent_id"/>

                </search>
            </field>
        </record>

        <!-- ********** Action ********** -->
        <!--Department action window -->
        <record model="ir.actions.act_window" id="department_list_action">
            <field name="name">Department</field>
            <field name="res_model">hr.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--Department action window for tree-->
        <record model="ir.actions.act_window.view" id="department_list_action_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="department_tree_view"/>
            <field name="act_window_id" ref="department_list_action"/>
        </record>

        <!--Department action window for form-->
        <record model="ir.actions.act_window.view" id="department_list_action_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="department_form_view"/>
            <field name="act_window_id" ref="department_list_action"/>
        </record>

        <!-- **********  Menu **********  -->
        <menuitem id="department_menu" name="Department" parent="configuration_menu" action="department_list_action"/>

    </data>
</openerp>